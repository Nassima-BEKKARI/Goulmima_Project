{% extends 'layout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}

	<a href="{{path('app_admin_addChambre')}}">

		<button class="btn btn-success text-white">
			Ajouter une chambre
		</button>
	</a>
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Nom</th>
				<th scope="col">Description</th>
				<th scope="col">Photos</th>
				<th scope="col">Prix</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
			{% for chambre in chambres %}
				<tr>
					<td>{{ chambre.id }}</td>
					<td>{{ chambre.nom }}</td>
					<td>{{ chambre.description }}</td>
					{# <td><img class="img-thumbnail" src="{{ asset('photosChambres/' ~ chambre.photo.nom) }}" alt="{{ chambre.nom }}"></td> #}
					<td>{{ chambre.prix }}</td>
					<td>
						<a href="{{path("app_select",{id:chambre.id})}}">
							<i class="fas fa-eye mx-1"></i>
						</a>
						<a href="{{path("app_admin_updateChambre",{id:chambre.id})}}">
							<i class="fas fa-edit mx-1 text-success"></i>
						</a>
						<a href="{{path("app_admin_deleteChambre",{id:chambre.id})}}">
							<i class="fas fa-trash mx-1 text-danger" onclick="return confirm('êtes vous sûr de vouloir supprimer cette chambre?')"></i>
						</a>

					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
